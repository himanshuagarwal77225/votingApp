<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWidth"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_logo"
        style="@style/Wrap"
        android:scaleType="fitCenter"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/heading_gradient" >

        <TextView
            android:id="@+id/txt_label1"
            style="@style/MatchWidth"
            android:layout_gravity="center|left"
            android:layout_margin="5dp"
            android:layout_weight=".5"
            android:layout_marginLeft="10dp"
            android:gravity="center|left"
            android:text="Text"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/txt_label2"
            style="@style/MatchWidth"
            android:layout_gravity="center|right"
            android:layout_margin="5dp"
            android:layout_marginRight="10dp"
            android:gravity="center|right"
            android:layout_weight=".5"
            android:text="Text1"
            android:textColor="@color/gray" />
    </LinearLayout>

    <TextView
        android:id="@+id/animateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:drawableTop="@drawable/hand_icon"
        android:text="Tap Here to Check Result"
        android:textColor="@color/blue"
        android:textSize="@dimen/input_textsize_m"
        android:visibility="visible" />

</LinearLayout>